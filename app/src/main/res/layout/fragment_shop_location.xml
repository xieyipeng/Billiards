<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#414141"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shop_location_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_back1"
                android:onClick="onClick" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="店铺位置"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"></RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_location_big" />


        <TextView
            android:id="@+id/shop_location_bmob"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shop_location_bmob_longitude"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/shop_location_bmob_latitude"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center" />


        <TextView
            android:id="@+id/shop_location_now"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shop_location_now_longitude"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/shop_location_now_latitude"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center" />

        <Button
            android:id="@+id/shop_location_change_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#fff"
            android:text="将当前位置设置为店铺位置"
            android:textColor="#000" />

    </LinearLayout>

</LinearLayout>